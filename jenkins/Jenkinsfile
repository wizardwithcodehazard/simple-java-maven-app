pipeline {
    agent any

    tools {
        maven 'M3'
    }

    options {
        skipStagesAfterUnstable()
        timestamps()
    }

    environment {
        EMAIL_TO = 'sahilrane249@gmail.com'
    }

    stages {
        stage('Build') {
            steps {
                bat 'mvn -B -DskipTests clean package'
            }
        }

        stage('Test') {
            steps {
                bat 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }

        stage('Deliver') {
            steps {
                echo 'Deliver stage placeholder (Windows)'
            }
        }
    }

    post {
        success {
            emailext(
                subject: "SUCCESS: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: """
Build SUCCESSFUL

Job: ${env.JOB_NAME}
Build Number: ${env.BUILD_NUMBER}

Check details:
${env.BUILD_URL}
""",
                to: env.EMAIL_TO
            )
        }

        failure {
            emailext(
                subject: "FAILURE: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: """
Build FAILED

Job: ${env.JOB_NAME}
Build Number: ${env.BUILD_NUMBER}

Check console output:
${env.BUILD_URL}
""",
                to: env.EMAIL_TO,
                attachLog: true
            )
        }

        unstable {
            emailext(
                subject: "UNSTABLE: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: """
Build UNSTABLE

Some tests failed or produced warnings.

Details:
${env.BUILD_URL}
""",
                to: env.EMAIL_TO
            )
        }
    }
}
